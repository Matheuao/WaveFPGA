{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build modwt",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g", "-O0",  // Flags para debug: símbolos e sem otimizações
                "*.c",
                "../lib/bit_exact/src/*.c",
                "-I", "../include",
                "-I", "../lib/bit_exact/include",
                "-o", "modwt",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
